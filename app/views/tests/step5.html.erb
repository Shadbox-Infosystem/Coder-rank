<%= form_with(model: @test, url: step5_tests_path, method: :post, local: true) do |f| %>
  <div class="container mt-5">
    <%= render 'sidebar' %>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-sm">
          <div class="card-body">
            <h3 class="text-center mb-4">Complete Test Details</h3>

            <!-- Maximum Score -->
            <div class="form-group">
              <%= f.label :max_score, "Maximum Score", class: "form-label" %>
              <%= f.number_field :max_score, class: "form-control rounded-lg" %>
            </div>

            <!-- Pass Mark -->
            <div class="form-group">
              <%= f.label :pass_mark, "Pass Mark", class: "form-label" %>
              <%= f.number_field :pass_mark, class: "form-control rounded-lg" %>
            </div>

            <!-- Pass Message -->
            <div class="form-group">
              <%= f.label :pass_message, "Pass Message", class: "form-label" %>
              <%= f.text_area :pass_message, class: "form-control rounded-lg", rows: 3 %>
            </div>

            <!-- Fail Message -->
            <div class="form-group">
              <%= f.label :fail_message, "Fail Message", class: "form-label" %>
              <%= f.text_area :fail_message, class: "form-control rounded-lg", rows: 3 %>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center">
              <%= f.submit "Complete Test", class: "btn btn-primary btn-lg px-5 rounded-pill" %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<style>
  .card {
    border-radius: 1rem;
  }

  .form-label {
    font-weight: bold;
    margin-bottom: 10px;
  }

  .form-control {
    background-color: #f8f9fa;
    border: 1px solid #ccc;
    border-radius: 0.5rem;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
  }

  .btn-primary:hover {
    background-color: #0056b3;
    border-color: #004085;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .container {
    padding: 40px;
  }

  .card-body {
    padding: 30px;
  }

  .btn-lg {
    width: 100%;
  }
</style>
